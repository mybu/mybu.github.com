-- -
-- -

[{ %
    for post in site.posts %
} {
    "id": {
        {
            post.id | replace: '/', '-' | jsonify
        }
    },
    "title": {
        {
            post.title | jsonify
        }
    },
    "category": {
        {
            post.category | jsonify
        }
    },
    "tags": [{ %
        for tag in post.tags %
    } {
        {
            tag | jsonify
        }
    } { % unless forloop.last %
    }, { % endunless %
    } { % endfor %
    }],
    "url": {
        {
            post.url | jsonify
        }
    },
    "date": {
        {
            post.date | date: '%Y-%m-%d' | jsonify
        }
    },
    "description": {
        {
            post.description | strip_html | strip_newlines | jsonify
        }
    }
} { % unless forloop.last %
}, { % endunless %
} { % endfor %
}]
